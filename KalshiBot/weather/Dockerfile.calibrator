FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    requests \
    python-dotenv \
    cryptography \
    schedule

# Copy weather module
COPY . /app/weather/

# Set Python path
ENV PYTHONPATH=/app:/app/weather

# Run bias calibrator
CMD ["python3", "/app/weather/bias_calibrator.py"]
